# 1. iOS 최소 버전을 15.0으로 올립니다 (Firebase 12+ 호환성 위해)
platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('Flutter', 'Generated.xcconfig'), __dir__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "Could not find Generated.xcconfig. Run 'flutter pub get' in the Flutter project root."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    match = line.match(/FLUTTER_ROOT=(.*)/)
    return match[1].strip if match
  end

  raise "FLUTTER_ROOT not found in Generated.xcconfig. Run 'flutter pub get' in the Flutter project root."
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Firebase workaround for non-modular headers
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseMessaging', :modular_headers => true
end

# 3. 여기가 핵심입니다. (빌드 설정을 강제로 변경하는 구간)
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # 라이브러리들의 최소 타겟 버전을 15.0으로 통일 (Firebase 12+ 호환)
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Firebase "non-modular header" 에러를 해결하는 핵심 설정
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      # Firebase 관련 추가 설정
      if target.name == 'firebase_messaging'
        config.build_settings['OTHER_CFLAGS'] = '$(inherited) -Wno-error=non-modular-include-in-framework-module'
      end
    end
  end

  # Runner 타겟에도 동일한 설정 적용
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        config.build_settings['OTHER_CFLAGS'] = '$(inherited) -Wno-error=non-modular-include-in-framework-module'
      end
    end
  end
end