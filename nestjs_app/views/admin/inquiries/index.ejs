<% const activePage = 'inquiries'; %>
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>문의 관리</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/all.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" crossorigin="anonymous" />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include("../partials/sidebar") %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>문의 관리</h1>
              </div>
            </div>
          </div>
        </section>

        <section class="content">
          <div class="container-fluid">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">전체 문의 목록 (<%= total %>건)</h3>
              </div>
              <div class="card-body p-0">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>카테고리</th>
                      <th>제목</th>
                      <th>작성자</th>
                      <th>상태</th>
                      <th>작성일</th>
                      <th>답변일</th>
                      <th>작업</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% inquiries.forEach(inquiry => { %>
                    <tr>
                      <td><%= inquiry.id %></td>
                      <td><%= inquiry.categoryLabel %></td>
                      <td><%= inquiry.subject %></td>
                      <td><%= inquiry.user?.email || '-' %></td>
                      <td>
                        <span class="badge <%= inquiry.statusBadgeClass %>">
                          <%= inquiry.statusLabel %>
                        </span>
                      </td>
                      <td><%= inquiry.createdAtFormatted %></td>
                      <td><%= inquiry.answeredAtFormatted %></td>
                      <td>
                        <a href="/adm/inquiries/<%= inquiry.id %>" class="btn btn-sm btn-primary">
                          <i class="fas fa-eye"></i> 보기
                        </a>
                      </td>
                    </tr>
                    <% }) %>
                    <% if (inquiries.length === 0) { %>
                    <tr>
                      <td colspan="8" class="text-center">문의가 없습니다.</td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <% if (totalPages > 1) { %>
              <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/adm/inquiries?page=<%= i %>"><%= i %></a>
                  </li>
                  <% } %>
                </ul>
              </div>
              <% } %>
            </div>
          </div>
        </section>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
  </body>
</html>
